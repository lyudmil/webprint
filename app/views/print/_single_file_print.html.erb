    <%= label_tag "Printer:" %>
    <%= select_tag "printers[]", printer_options, :class => "print_job_input" %>

    <%= label_tag "Number of copies:" %>
    <%= text_field_tag "copies[]", "1", :size => 2, :class => "print_job_input" %>
</div>